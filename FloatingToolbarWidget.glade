                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                  </object>
                </child>
                <child>
                  <object class="GtkRadioButton" id="_optionStampSnapPixel">
                    <property name="label" translatable="yes">Snap to Pixels</property>
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="active">True</property>
                  </object>
                </child>
                <child>
                  <object class="GtkRadioButton" id="_optionStampSnapTile">
                    <property name="label" translatable="yes">Snap to Tiles</property>
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="group">_optionStampSnapPixel</property>
