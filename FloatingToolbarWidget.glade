        </child>
        <child>
          <object class="GtkButton" id="_optionSelectionExport">
            <property name="label" translatable="yes">Export Selection</property>
            <property name="visible">True</property>
            <property name="can_focus">False</property>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
          </object>
        </child>
                <child>
                  <object class="GtkRadioButton" id="_optionSelectionAdd">
                    <property name="label" translatable="yes">Add to Selection</property>
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="active">True</property>
                  </object>
                </child>
                <child>
