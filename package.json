{
  "name": "pixel-splash-studio",
  "productName": "Pixel Splash Studio",
  "version": "1.0.0",
  "description": "Pixel Splash Studio Electron app",
  "author": "Joel Longanecker",
  "license": "MIT",
  "main": "dist-electron/electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"tsc -p electron -w\" \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:renderer": "vite build",
    "build:main": "tsc -p electron",
    "build:demo": "vite build --config vite.demo.config.ts",
    "build": "npm run build:main && npm run build:renderer && npm run build:demo",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:e2e": "npm run build:main && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"wait-on http://localhost:5173 && playwright test\"",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-flatpak": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.46.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.2.0",
    "playwright": "^1.46.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vitest": "^1.6.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "bmp-js": "^0.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "elma-pcx": "^1.1.1",
    "gif-encoder-2": "^1.0.5",
    "gifuct-js": "^2.1.2",
    "immer": "^10.0.4",
    "jszip": "^3.10.1",
    "nanoid": "^5.0.7",
    "pcx-js": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tga": "^1.0.7",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "build": {
    "appId": "studio.pixelsplash",
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
